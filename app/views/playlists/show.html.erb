<div class="background">
  <div class="container">
   <div class="playlist-wrapper">
      <div class="playlists-headers">
        <div>
          <h1><%= @playlist.name.capitalize %></h1>
        </div>
        <div class="link-playlists">
          <%= link_to "Toutes les playlists", playlists_path %>
        </div>
      </div>
      <div class="infos">
        <div class="infos-left">
          <div class="img"
            <% if @playlist.danceability.nil? %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path("energie0.jpg")%>')";
            <% elsif @playlist.danceability < 25 %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path("energie1.jpg")%>')";
            <% elsif @playlist.danceability < 50 %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path("energie2.jpg")%>')";
            <% elsif @playlist.danceability < 74 %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path("energie3.jpg")%>')";
            <% else %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path("energie4.jpg")%>')";
            <% end %>>
          </div>
          <ul class="details">
            <% if @playlist.genre.present? %>
              <li>Genre : <%= @playlist.genre.capitalize %></li>
            <% end %>
            <% if @playlist.energy.present? %>
              <li>Energie :
                <% if @playlist.energy < 25 %>
                  +
                <% elsif @playlist.energy < 50 %>
                  ++
                <% elsif @playlist.energy < 74 %>
                  +++
                <% else %>
                  ++++
                <% end %>
              </li>
            <% end %>
            <% if @playlist.danceability.present? %>
              <li>Rythme :
                <% if @playlist.danceability < 25 %>
                  +
                <% elsif @playlist.danceability < 50 %>
                  ++
                <% elsif @playlist.danceability < 74 %>
                  +++
                <% else %>
                  ++++
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="listen-link">
          <%= link_to "https://open.spotify.com/playlist/#{@playlist.spotify_id}", target: :_blank do %>
            <div class="play">
              <i class="fas fa-play"></i>
            </div>
            <div>
              <p>Ecouter</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
