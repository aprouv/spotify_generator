<% if notice %>
  <div class="alert alert-success alert-dismissible m-3" role="alert">
    <button type="button" class="close btn btn-light p-1" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible m-3" role="alert">
    <button type="button" class="close btn btn-light p-1" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>
